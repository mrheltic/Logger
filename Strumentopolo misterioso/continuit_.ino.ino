}

void loop() {
  Display.clearDisplay();
  int raw = analogRead(A1);
            buffer = raw * Vin;
  Vout = (buffer) / 1024.0;
  buffer = (Vin / Vout) - 1;
  R22 = R11 * buffer;
  if (R22 < 50) {
    tone(buzzer, 1000, 200);
    Display.drawBitmap(0, 0, connessione, 128, 32, WHITE);
    Display.setTextSize(1);
    Display.setTextColor(WHITE);
